{
  "id": null,
  "title": "Project Mayhem - Chaos Engineering Dashboard",
  "timezone": "browser",
  "schemaVersion": 26,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-5m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Chaos Requests",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "chaos_requests_total",
          "legendFormat": "Total Requests",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 10},
              {"color": "red", "value": 50}
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "CPU Usage",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "system_cpu_percent",
          "legendFormat": "CPU %",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "unit": "percent",
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 80}
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Memory Usage",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "system_memory_percent",
          "legendFormat": "Memory %",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "unit": "percent",
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Chaos Injections",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(chaos_injections_total)",
          "legendFormat": "Total Injections",
          "refId": "D"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "blue", "value": null},
              {"color": "purple", "value": 5},
              {"color": "orange", "value": 10}
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "CPU Usage Over Time",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "system_cpu_percent",
          "legendFormat": "CPU Usage %",
          "refId": "E"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      },
      "options": {
        "legend": {
          "displayMode": "visible"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Memory Usage Over Time", 
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "system_memory_percent",
          "legendFormat": "Memory Usage %",
          "refId": "F"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      },
      "options": {
        "legend": {
          "displayMode": "visible"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
    },
    {
      "id": 7,
      "type": "barchart",
      "title": "Chaos Injections by Scenario",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "chaos_injections_total",
          "legendFormat": "{{scenario}}",
          "refId": "G"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "visible"
        }
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 }
    }
  ]
}
